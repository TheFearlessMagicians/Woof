<% include ./partials/header %>

    <div class="container col-md-12">
        <div class="col-md-6">
            <div class="container-fixed">
                <h1 class="well">Registration Form</h1>
                <div class="col-lg-12 well">
                    <div class="row">
                        <form>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label style="margin-bottom: -1.5%;">Name</label>
                                    <input type="text" placeholder="Enter Name" name="user[name]" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label style="margin-bottom: 1%;">Address</label>
                                    <input placeholder="Enter Address Here.." class="form-control" name="user[address[houseAddress]]"></input>
