<% include ./partials/header %>


<div class="container">
    <h1 class="well">Registration Form</h1>
	<div class="col-lg-12 well">
	<div class="row">
			<form>
				<div class="col-sm-12">
					<div class="row">
						<div class="col-sm-12 form-group">
							<label>Name</label>
							<input type="text" placeholder="Enter Name" name = "user[name]" class="form-control">
						</div>
					</div>

					<div class="form-group">
						<label>Address</label>
						<textarea placeholder="Enter Address Here.." rows="3" class="form-control" name = "user[address][houseAddress]"></textarea>
					</div>

					<div class="row">
						<div class="col-sm-4 form-group">
								<label>City</label>
								<input type="text" placeholder="Enter City Name Here.." class="form-control" name="user[address][city]">
						</div>
						<div class="col-sm-4 form-group">
							<label>State</label>
							<input type="text" placeholder="Enter State Name Here.." class="form-control" name= "user[address][state]">
						</div>
						<div class="col-sm-4 form-group">
							<label>Zip</label>
							<input type="text" placeholder="Enter Zip Code Here.." class="form-control"
							name= "user[address][zip]">
						</div>
					</div>

					<div class="form-group">
						<label>Email Address</label>
						<input type="text" placeholder="Enter Email Address Here.." class="form-control" name= "user[email]">
					</div>

					<div class="form-group">
						<label>How many dogs do you have?</label>
						<input id ="nDogs" type="number" placeholder="Enter Number of Dogs Here.." class="form-control" name= "user[numberOfDogs]" onkeyup= "insertDogsForm()" value=0>
					</div>


					<ul>
					</ul>




				<button type="button" class="btn btn-lg btn-info">Submit</button>
					</div>
				</form>
				</div>
	</div>
	</div>

<script>
var pastDogs = [];
